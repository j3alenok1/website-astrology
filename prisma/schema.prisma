// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id            String   @id @default(cuid())
  name          String
  birthDate     DateTime
  birthTime     String?
  city          String
  birthCity     String?
  contact       String
  request       String   @db.Text
  consent       Boolean  @default(false)
  
  // UTM tracking
  utmSource     String?
  utmMedium     String?
  utmCampaign   String?
  utmTerm       String?
  utmContent    String?
  
  // Analytics
  referrer      String?
  userAgent     String?
  ipAddress     String?
  
  // Status
  status        String   @default("new") // new, contacted, completed, archived
  notes         String?  @db.Text
  
  productSlug   String?
  productTitle  String?
  amount        Int?     // сумма в тиынах (1/100 тенге)
  orderId       String?  @unique
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

model Order {
  id                String   @id @default(cuid())
  productSlug       String
  productTitle      String
  amount            Int      // в тиынах (1/100 тенге)
  currency          String   @default("KZT")
  status            String   @default("pending") // pending, paid, failed, cancelled
  paymentProvider   String?  // yookassa | kaspi
  yookassaPaymentId String?  @unique
  apipayInvoiceId   Int?     // Kaspi через ApiPay.kz
  
  name              String
  birthDate         DateTime
  birthTime         String?
  city              String
  birthCity         String?
  contact           String
  request           String   @db.Text
  consent           Boolean
  utmSource         String?
  utmMedium         String?
  utmCampaign       String?
  utmTerm           String?
  utmContent        String?
  userAgent         String?
  referrer          String?
  ipAddress         String?
  
  leadId            String?  @unique
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([status])
  @@index([yookassaPaymentId])
}

model Admin {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  name          String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
